function(basjoo_cxx_test)
  if(NOT (BUILD_TESTING AND BASJOO_BUILD_TESTING))
    return()
  endif()

  cmake_parse_arguments(BASJOO_CXX_TEST
    ""
    "NAME"
    "SRCS;COPTS;DEFINES;LINKOPTS;DEPS"
    ${ARGN}
  )

  add_executable(${BASJOO_CXX_TEST_NAME} ${BASJOO_CXX_TEST_SRCS})
  set_property(TARGET ${BASJOO_CXX_TEST_NAME} PROPERTY FOLDER ${BASJOO_IDE_FOLDER}/tests)
  target_include_directories(${BASJOO_CXX_TEST_NAME}
    PRIVATE
      "$<BUILD_INTERFACE:${CMAKE_SOURCE_DIR}/src>"
      "$<INSTALL_INTERFACE:${CMAKE_INSTALL_INCLUDEDIR}>"
  )
  target_compile_options(${BASJOO_CXX_TEST_NAME} PRIVATE ${BASJOO_CXX_TEST_COPTS})
  target_compile_definitions(${BASJOO_CXX_TEST_NAME} PRIVATE ${BASJOO_CXX_TEST_DEFINES})
  target_link_options(${BASJOO_CXX_TEST_NAME} PRIVATE ${BASJOO_CXX_TEST_LINKOPTS})
  target_link_libraries(${BASJOO_CXX_TEST_NAME}
    PRIVATE
      cxxopts::cxxopts
      doctest::doctest
      Matplot++::matplot
      ${BASJOO_CXX_TEST_DEPS}
  )

  add_test(NAME ${BASJOO_CXX_TEST_NAME} COMMAND ${BASJOO_CXX_TEST_NAME})
endfunction()
